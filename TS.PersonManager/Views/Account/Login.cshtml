@model TS.PersonManager.Models.UserViewModel

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-sm p-4" style="min-width: 320px; max-width: 400px; width: 100%;">
        <h4 class="text-center mb-4">Login</h4>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    </div>
</div>